{
    "name": "deinte/scrada-php-sdk",
    "description": "Production-ready PHP SDK for the Scrada API built on Saloon.",
    "keywords": [
        "scrada",
        "sdk",
        "peppol"
    ],
    "homepage": "https://github.com/deinte/scrada-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Deinte",
            "email": "info@deinte.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "saloonphp/saloon": "^3.2"
    },
    "require-dev": {
        "laravel/pint": "^1.15",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.35",
        "pestphp/pest-plugin-arch": "^2.6",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "spatie/ray": "^1.41"
    },
    "autoload": {
        "psr-4": {
            "Deinte\\ScradaSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Deinte\\ScradaSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
